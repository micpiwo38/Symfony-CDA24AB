{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container w-50 bg-white p-3 mt-5">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous Ãªtes connecter en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Deconnexion</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal text-warning">Connexion</h1>
            <label class="mt-3" for="username">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mt-3" autocomplete="email" required autofocus>
            <label class="mt-3" for="password">Mot de passe</label>
            <input type="password" name="_password" id="password" class="form-control mt-3" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="btn btn-primary mt-5" type="submit">
                Connexion
            </button>
        </form>
    </div>
{% endblock %}
